{
  "compilerOptions": {
    "isolatedModules": false,
    "target": "es2019",
    "module": "CommonJS",
    "strict": false,
    "noImplicitUseStrict": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "bin",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "bin", "**/*.spec.ts", "**/*.test.ts"]
}
